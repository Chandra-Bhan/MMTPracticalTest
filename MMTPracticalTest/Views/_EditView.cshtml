<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script>
    $(document).ready(function () {
   

         $("#stateid").change(function () {
            var id = $(this).val();
               console.log(id);
            $.ajax( {
                type: "post",
                url: "/Home/Edit1?stateid=" + id,
                contentType:"html",
                success: function (response) {
                    $("#cityid").empty();
                    $("#cityid").append(response);
                }

           });

        });

            
   

    });

</script>